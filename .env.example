# Remote MCP Server Configuration
NODE_ENV=production
PORT=3000

# OAuth 2.1 Configuration
OAUTH_CLIENT_ID=academiadepolitie_remote_mcp
OAUTH_CLIENT_SECRET=your_secure_secret_here
OAUTH_REDIRECT_URI=https://claude.ai/api/mcp/auth_callback

# JWT Configuration  
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# API Configuration
API_BASE_URL=https://www.academiadepolitie.com/api/internal
API_TIMEOUT=30000

# Security
ALLOWED_ORIGINS=https://claude.ai,https://mcp.academiadepolitie.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# SSL (pentru development)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem